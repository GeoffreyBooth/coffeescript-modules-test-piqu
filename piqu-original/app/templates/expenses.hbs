<div class="row sub-header">
  <div class="small-6 columns">
    <h1>Expenses</h1>
  </div>
  <div class="small-6 columns">
    {{#link-to 'expenses-tickets.new' class="button right"}}
      New ticket
    {{/link-to}}
    {{#link-to 'expenses-invoices.new' class="button right"}}
      New invoice
    {{/link-to}}
  </div>
</div>

<div class="row">
  <div class="small-12 columns">
    <div class="panel left">
      <ul>
        <li>
          <strong>TOTAL:</strong>
          {{total}}
        </li>
        <li>
          <strong>Total before taxes:</strong>
          {{totalWithoutTaxes}}
        </li>
        <li>
          <strong>VAT:</strong>
          {{vat}}
        </li>
        <li>
          <strong>IRPF:</strong>
          {{irpf}}
        </li>
      </ul>
    </div>
  </div>
</div>

<div class="row">
  <div class="small-12 columns income-invoices">
    <h2>Invoices</h2>
    <table role="grid">
      <thead>
        <tr>
          <th>Invoice number</th>
          <th>Client name</th>
          <th>Emitted at</th>
          <th>State</th>
          <th>Total</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        {{#each invoice in invoices}}
          <tr>
            <td>{{invoice.number}}</td>
            <td>{{invoice.relatedCompany.name}}</td>
            <td>{{moment invoice.emittedAt invoice.dateOutputFormat}}</td>
            <td>{{invoice.state}}</td>
            <td>{{invoice.total}}</td>
            <td>
              {{#link-to 'expenses-invoices.show' invoice}}
                view
              {{/link-to}}
              |
              {{#link-to 'expenses-invoices.edit' invoice}}
                edit
              {{/link-to}}
              |
              <a {{action 'destroyBillingDocument' invoice}}>delete</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="small-12 columns income-tickets">
    <h2>Tickets</h2>
    <table role="grid">
      <thead>
        <tr>
          <th>Ticket number</th>
          <th>Client name</th>
          <th>Emitted at</th>
          <th>State</th>
          <th>Total</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        {{#each ticket in tickets}}
          <tr>
            <td>{{ticket.number}}</td>
            <td>{{ticket.relatedCompanyName}}</td>
            <td>{{moment ticket.emittedAt ticket.dateOutputFormat}}</td>
            <td>{{ticket.state}}</td>
            <td>{{ticket.total}}</td>
            <td>
              {{#link-to 'expenses-tickets.show' ticket}}
                view
              {{/link-to}}
              |
              {{#link-to 'expenses-tickets.edit' ticket}}
                edit
              {{/link-to}}
              |
              <a {{action 'destroyBillingDocument' ticket}}>delete</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>